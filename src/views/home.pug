doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="/css/styles.css")
        title Document
    body
        .loginStatus
            .gameBox#gameBox
                .game#gameZone
                    canvas.canvas#canvas
                    .controls
                        .canvas-mode 
                            button.jsMode PEN
                        .canvas-Colors#canvas-Colors 
                            .jsColor(style="background-color:#2c2c2c")
                            .jsColor(style="background-color:#f2f2f2")
                            .jsColor(style="background-color:#FF3B30")
                            .jsColor(style="background-color:#FF9500")
                            .jsColor(style="background-color:#FFCC00")
                            .jsColor(style="background-color:#4CD963")
                            .jsColor(style="background-color:#5AC8FA")
                            .jsColor(style="background-color:#0579FF")
                            .jsColor(style="background-color:#5856D6")
                .chat
                    .jsNotification
                    ul.chat__messages#jsMessages
                        .player__board#jsPboard            
                        #loginNotification
                    form.chat__form#jsSendMsg
                        input(placeholder="Write a message", type="text")
        .logoutStatus
            form.loginForm
                input(type="text", placeholder="What is your name?", maxLength=15).loginInput
        script.
            window.events =!{events}
        script(src="/socket.io/socket.io.js") 
        script(src="/js/main.js") 